source 'https://github.com/CocoaPods/Specs.git'

plugin 'cocoapods-keys', {
  :project => 'Tek Talk',
  :keys => [
    'PARSE_APP_ID',
    'PARSE_CLIENT_ID'
  ]
}


platform :ios, '9.0'
use_frameworks!

def important_pods
    pod 'Parse'
    pod 'CocoaLumberjack'
end

def test_pods
    pod 'Quick'
    pod 'Nimble'
    pod 'OCMockito', '~> 3.0'
end

target "Tek Talk" do
   important_pods
end

target "Tek TalkTests" do
   important_pods
   test_pods
end
